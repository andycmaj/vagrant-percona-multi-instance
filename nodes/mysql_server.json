{
    "instance_ports": [ 3306, 3307, 3308, 3309 ],
    "db_bootstrappers" : [
        "/etc/mysql/bootstrap_scripts/*.sql",
        "/etc/mysql/appcon_grants.sql",
        "/etc/mysql/machines.sql"
    ],
    "percona": {
        "server": {
            "disable_firewall": true,
            "role": "multi_instance",
            "allow_remote_root": true,
            "bind_address": "0.0.0.0"
        }
    },
    "run_list": [
        "recipe[percona::server]"
    ]
}
